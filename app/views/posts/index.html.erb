<% @posts.each do |post| %>
<% comments = '/comments' %>


	<div class="blog_post">  
		<h2 class="blog_title"><%=h post.title %></h2>
	   <p class="blog_body"><%= auto_link(truncate(post.body, :length => 400), :link => :urls) %></p>
=======
	<div class="post">  
		<h2><%=h post.title %></h2>
	   <div class="post_body"><%=h truncate(post.body, :length => 400) %></div>

	   <p class="post_time">Posted at: <%=h post.created_at %></p>
	   
	   <p>
	   	 <%= link_to 'Read More', post %> 

	   	 <% if !current_user.nil? %>
	   	  | <%= link_to 'Edit', edit_post_path(post) %> |
	   	   <%= link_to 'Delete', post, :confirm => 'Are you sure?', :method => :delete %>
	     <% end %>
   	 </p>
	</div>
	
<% end %>


<br />

