<% @posts.each do |post| %>
<% comments = '/comments' %>

	<div class="blog_post">  
		<h2 class="blog_title"><%=h post.title %></h2>
	   <p class="blog_body"><%=h truncate(post.body, :length => 400) %></p>
	   <p class="post_time">Posted at: <%=h post.created_at %></p>
	   
	   <p>
	   	 <%= link_to 'Read More', post %> 

	   	 <% if !current_user.nil? %>
	   	  | <%= link_to 'Edit', edit_post_path(post) %> |
	   	   <%= link_to 'Delete', post, :confirm => 'Are you sure?', :method => :delete %>
	     <% end %>
   	 </p>
	</div>
	
<% end %>


<br />

<% if !current_user.nil? %>
  <%= link_to 'New post', new_post_path %>
<% end %>