<h1 class="blog_title">New comment</h1>

<% form_for(@comment) do |f| %>
  <%= f.error_messages %>

<%= f.hidden_field :post_id, :value => params[:post_id] %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', comments_path %>